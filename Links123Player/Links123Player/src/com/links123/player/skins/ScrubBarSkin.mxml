	<!--- 字幕条容器 -->
	<s:Group left="0" right="0" top="0" height="11" id="clipcon">
	</s:Group>
	
	<!--- A skin part that defines a button that can be dragged along the track to increase or decrease 
	the playhead location in the video.   -->
	<s:Button id="thumb" x="0" y="-1" width="16" height="16" includeInLayout="false" buttonMode="true"
			  skinClass="com.links123.player.skins.ScrubBarThumbSkin" />
	
